# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /login/redirect             @controllers.AuthController.login
POST    /logout                     @controllers.AuthController.logout
POST    /auth/callback              @controllers.AuthController.callback

GET     /users/current              @controllers.UserController.currentUser
GET     /users/:id                  @controllers.UserController.get(id)

# Map static resources from the /public folder to the /assets URL path
GET     /favicon.ico                controllers.Assets.at(path="/public", file="images/favicon.ico")
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /webjars/*file              controllers.WebJarAssets.at(file)

# Home page
GET     /                           @controllers.Application.main(path="")
GET     /login                      @controllers.Application.main(path="login")
GET     /projects                   @controllers.ProjectController.index
GET     /projects/checkNew          @controllers.ProjectController.checkNewName(name: String)
POST    /projects                   @controllers.ProjectController.create
PUT     /projects/:id               @controllers.ProjectController.update(id)
DELETE  /projects/:id               @controllers.ProjectController.delete(id)

GET     /waiting                    @controllers.Application.waiting